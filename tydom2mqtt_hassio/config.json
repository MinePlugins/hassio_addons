{
  "name": "tydom2mqtt_edge",
  "version": "0.8",
  "slug": "tydom2mqtt_edge",
  "description": "Link between a Delta Dore's Tydom Hub and and a MQTT broker, unofficial of course, hassio addon version",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "url": "https://github.com/mrwiwi/tydom2mqtt.git",
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "image":"mrwiwi/tydom2mqtt_edge",
  "options":
  {
    "TYDOM_MAC":"001A25xxxxxx",
    "TYDOM_IP": "192.168.1.xx",
    "TYDOM_PASSWORD":"tydom_password",
    "MQTT_HOST": "localhost",
    "MQTT_USER": "mqtt_user",
    "MQTT_PASSWORD": "mqtt_pass",
    "MQTT_PORT": "1883",
    "MQTT_SSL": "true"
  },
  "schema":
  {
    "TYDOM_MAC":"str",
    "TYDOM_IP": "str?",
    "TYDOM_PASSWORD":"str",
    "MQTT_HOST": "str?",
    "MQTT_USER": "str?",
    "MQTT_PASSWORD": "str?",
    "MQTT_PORT": "port?",
    "MQTT_SSL": "bool?"
  }  
}